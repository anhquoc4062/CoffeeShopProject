@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/User/Layout.cshtml";
}
<link rel="stylesheet" href="~/user/css/plusmin.css">
<section class="generic-banner relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="col-lg-10">
                <div class="generic-banner-content">
                    <h2 class="text-white">GIỎ HÀNG</h2>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- About Generic Start -->

<div class="main-wrapper">
    <div class="container">
        <div class="row">
            <table class="cart-item">
                <thead>
                    <tr>
                        <th></th>
                        <th></th>
                        <th>Sản phẩm</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>

                <tbody>
                    @if (ViewBag.Cart.Count == 0)
                    {
                        <tr class="none-item-cart">
                            <td colspan="6" style="font-size: 17px">Chưa có sản phẩm trong giỏ</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in ViewBag.Cart)
                        {
                            <tr class="item-cart" data-id="@item.MaThucDon">
                                <td style="width:75px"><a class="remove-item-cart" href="#" data-id="@item.MaThucDon">x</a></td>
                                <td style="text-align: left; width: 96px"><img src="~/uploads/product/@item.HinhAnh" alt="" height="86" width="86"></td>
                                <td>@item.TenThucDon</td>
                                <td>$@string.Format("{0:N2}", item.GiaBan)</td>
                                <td>
                                    <div class="qty mt-5">
                                        <span class="minus bg-dark" data-id="@item.MaThucDon">-</span>
                                        <input type="number" class="count" data-id="@item.MaThucDon" name="qty" value="@item.SoLuong">
                                        <span class="plus bg-dark" data-id="@item.MaThucDon">+</span>
                                    </div>
                                </td>
                                <td class="total-item" data-id="@item.MaThucDon">$@string.Format("{0:N2}", item.GiaBan * item.SoLuong)</td>
                            </tr>
                        }
                    }


                    <tr style="border: none">
                        <td colspan="6">
                            <div class="coupon">
                                <form>
                                    <input type="text" placeholder="Nhập mã khuyến mãi" class="form-control">
                                    <button class="btn btn-default">NHẬP MÃ</button>
                                </form>

                            </div>
                            <button class="update-cart btn btn-default">CẬP NHẬT GIỎ HÀNG</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row cart-total-wrapper">
            <div class="container">
                <div class="row">
                    <h3>CART TOTALS</h3>
                </div>
            </div>

            <table class="cart-total">
                <tr>
                    <th>Subtotal</th>
                    <td class="subtotal-cart">$@string.Format("{0:N2}", ViewBag.Total)</td>
                </tr>
                <tr>
                    <th>Coupon</th>
                    <td>None</td>
                </tr>
                <tr>
                    <th>Total</th>
                    <td class="total-cart">$@string.Format("{0:N2}", ViewBag.Total)</td>
                </tr>
            </table>

            <div class="checkout-action">
                <form asp-action="Index" asp-controller="Checkout">
                    <button class="btn btn-default">ĐẾN TRANG THANH TOÁN</button>
                </form>
            </div>
        </div>
    </div>
</div>
