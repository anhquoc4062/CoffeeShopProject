
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Partial("~/Views/Layout/Admin/Head.cshtml")
<style>
    .page-content--bge5 {
        height: 110vh;
    }
    .login-logo {
        position: relative;
        bottom: 70px;
    }

    .login-form {
        position: relative;
        bottom: 150px;
    }
    .login-content {
        height: 730px;
    }
    .login-form .au-btn--green {
        background: #be9c79;
        border-radius: unset;
        text-align: center;
    }

    input.au-input.au-input--full:focus {
        border-color: #be9c79;
    }

    .login-form .au-btn--green:hover {
        background: #262626;
    }
    label.error {
        color: red;
        font-size: 13px;
    }
</style>
<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="login-form">
                            <form asp-action="SignUp" asp-controller="Login" method="post" enctype="multipart/form-data" id="signUpForm">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input class="au-input au-input--full" type="text" name="username" placeholder="Nhập tên tài khoản..." autocomplete="new-password">
                                    @if (ViewBag.AccExist != null)
                                    {

                                        <small style="color: red" class="form-text">Tên tài khoản đã tồn tại</small>
                                    }
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input class="au-input au-input--full" type="password" name="password" placeholder="Nhập mật khẩu...">
                                </div>
                                <div class="form-group">
                                    <label>Email</label>
                                    <input class="au-input au-input--full" type="email" name="email" placeholder="Nhập email...">
                                </div>
                                <div class="form-group">
                                    <label>Ảnh đại diện</label>
                                    <input class="form-control-file" type="file" name="avatar" onchange="previewImg(this,'preview_img')">
                                    <img id="preview_img" src="/images/product/no-preview.jpg" width="100" height="100">
                                </div>
                                <script>
                                    function previewImg(input, id_string) {
                                        var exp_string = "#";
                                        exp_string += id_string;
                                        if (input.files && input.files[0]) {
                                            var reader = new FileReader();

                                            reader.onload = function (e) {
                                                $(exp_string).attr('src', e.target.result);
                                            }

                                            reader.readAsDataURL(input.files[0]);
                                        }
                                    }
                                </script>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
                            </form>
                            <div class="register-link">
                                <p>
                                    Already have account?
                                    <a asp-controller="Login" asp-action="Index">Sign In</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    @Html.Partial("~/Views/Layout/Admin/JS.cshtml")

    <script src="~/js/jquery.validate.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#signUpForm").validate({
                rules: {
                    username: "required",
                    password: "required",
                    email: "required"
                },
                messages: {
                    username: "Không được để trống",
                    password: "Không được để trống",
                    email: "Không được để trống"
                }
            });
        });

    </script>
</body>

</html>
<!-- end document-->
