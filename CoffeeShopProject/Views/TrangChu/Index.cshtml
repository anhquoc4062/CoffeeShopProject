                </div>
            </div>
        </div>
        <div class="row" id="coffee" style="opacity:0; position: relative">
            @foreach (var product in ViewBag.ListProduct)
            {

                <div class="col-lg-4">
                    <a asp-controller="SingleProduct" asp-action="Index" asp-route-id="@product.MaThucDon">
                        <div class="menu-image">
                            <img src="~/uploads/product/@product.HinhAnh" alt="" width="200" height="200">
                        </div>
                        <div class="single-menu">

                            <div class="title-div justify-content-between d-flex">
                                <h4>@product.TenThucDon</h4>
                                <p class="price float-right">
                                    $@string.Format("{0:N2}", product.GetGiaKhuyenMai)
                                </p>
                            </div>
                            <p style="color: #777777">Category: <span style="color: #be9c79; font-weight:bold">@product.TenLoai</span></p>
                        </div>
                    </a>
                </div>
            }

        </div>
    </div>
</section>
