
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Admin/Layout.cshtml";
}
<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- USER DATA-->
                <div class="user-data m-b-30">
                    <h3 class="title-3 m-b-30">
                        <i class="zmdi zmdi-account-calendar"></i>danh sách nhân viên
                    </h3>
                    <div class="filters m-b-45">
                        <button class="au-btn au-btn-icon au-btn--green au-btn--small product_btn" data-action="Add" data-toggle="modal" data-target="#add_employee_modal">
                            <i class="zmdi zmdi-plus"></i>thêm
                        </button>
                    </div>
                    <div class="table-responsive table-data">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td></td>
                                    <td>ảnh</td>
                                    <td>họ tên</td>
                                    <td>chức vụ</td>
                                    <td>lương</td>
                                    <td>tác vụ</td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.List)
                                {
                                    <tr>
                                        <td width="30px">
                                            <button class="btn btn-success" style="background-color:#95a5a6;border:none"><i class="fas fa-eye"></i></button>
                                        </td>
                                        <td>
                                            <img src="~/uploads/employee/@item.HinhAnh" width="80" height="70" />
                                        </td>
                                        <td>
                                            <div class="table-data__info">
                                                <h6>@item.HoTen</h6>
                                                <span>
                                                    <a href="#">@item.Email</a>
                                                </span>
                                            </div>

                                        </td>
                                        <td>
                                            @item.TenChucVu
                                        </td>
                                        <td>
                                            $@string.Format("{0:N2}", item.Luong)
                                        </td>
                                        <td>
                                            <button class="btn btn-danger"><i class="fas fa-user-edit"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- END USER DATA-->
            </div>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("EmployeeModal");
}

