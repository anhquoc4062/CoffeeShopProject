
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Admin/Layout.cshtml";
}
<style>
    .main-content {
        min-height: 150vh;
    }
</style>

<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="title-5 m-b-35">List Review</h3>
                <div class="table-responsive table--no-card m-b-30">
                    <table class="table table-borderless table-striped table-earning text-right">
                        <thead>
                            <tr>
                                <th style="padding-right: 60px">User</th>
                                <th></th>
                                <th style="padding-right: 50px">Product</th>
                                <th></th>
                                <th style="padding-right: 90px">Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody style="vertical-align: middle">
                            @foreach (var item in ViewBag.ListReview)
                            {
                                <tr>
                                    <td><img src="~/uploads/employee/@item.AnhDaiDien" width="70" height="70" data-toggle="tooltip" data-placement="bottom" title="@item.TenTaiKhoan" /></td>
                                    <td>đã <button style="color: #2980b9; font-weight:bold" title="Lời nhận xét" data-trigger="hover" data-toggle="popover" data-placement="bottom" data-content="@item.LoiNhanXet">bình luận</button> về sản phẩm</td>
                                    <td><img src="~/uploads/product/@item.HinhAnh" width="70" height="70" data-toggle="tooltip" data-placement="bottom" title="@item.TenThucDon" /></td>
                                    <td>vào lúc</td>
                                    <td>@item.NgayDanhGia</td>
                                    <td><a asp-action="RemoveReview" asp-controller="ReviewAdmin" asp-route-id="@item.MaDanhGia" style="font-weight: bold; background: none; color: #e74c3c" data-toggle="tooltip" data-placement="bottom" title="Xóa"><i class="fas fa-minus-circle"></i></a></td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>

